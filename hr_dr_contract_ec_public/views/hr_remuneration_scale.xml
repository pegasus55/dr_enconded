<odoo>
    <data>
        <!--Hr remuneration scale-->
        <record model="ir.actions.act_window" id="remuneration_scale_list_action">
            <field name="name">Remuneration scale</field>
            <field name="res_model">hr.remuneration.scale</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p
                    class="oe_view_nocontent_smiling_face">Create the remuneration scale.
                </p>
            </field>
        </record>
        <record model="ir.ui.view" id="remuneration_scale_list">
            <field name="name">Remuneration scale list</field>
            <field name="model">hr.remuneration.scale</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="level"/>
                    <field name="last_year"/>
                    <field name="last_salary"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="remuneration_scale_form">
            <field name="name">Remuneration scale form</field>
            <field name="model">hr.remuneration.scale</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="level"/>
                            </group>
                            <group>
                                <field name="last_year"/>
                                <field name="last_salary"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>
                        <notebook>
                            <page name = "remuneration_scale_year_ids" string="Remuneration scale by year">
                                <field name="remuneration_scale_year_ids">
                                    <tree>
                                        <field name="remuneration_scale_id" invisible="1"/>
                                        <field name="year"/>
                                        <field name="remuneration"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="remuneration_scale_id" invisible="1"/>
                                                    <field name="year"/>
                                                </group>
                                                <group>
                                                    <field name="remuneration"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <menuitem
            id="menu_hr_remuneration_scale"
            action="remuneration_scale_list_action"
            parent="menu_hr_remuneration_scale_root"
            sequence="10"/>
        <!--Hr remuneration scale-->
    </data>
</odoo>