<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="dr_license_customer.deviceList" owl="1">
    <div>
      <table class="o_list_table table table-sm table-hover table-striped o_list_table_ungrouped">
        <thead class="thead-light">
          <tr>
            <th></th>
            <th>Brand</th>
            <th>Model</th>
            <th>Serial number</th>
          </tr>
        </thead>
        <tbody id="dr_device_list_table_body">
          <t t-if="state.total > 0">
            <t t-foreach="state.content" t-as="item" t-key="item.sn">
              <tr class="o_data_row">
                <th><span class="fa fa-clock-o"/></th>
                <td t-esc="item.brand"/>
                <td t-esc="item.model"/>
                <td t-esc="item.sn"/>
              </tr>
            </t>
          </t>
          <t t-else="">
            <tr class="o_data_row table-info">
              <td colspan="4">This license does not cover any biometric devices.</td>
            </tr>
          </t>
        </tbody>
        <tfoot t-if="total > 0">
          <tr class="table-secondary">
            <th colspan="4">Total: <t t-esc="state.total"/></th>
          </tr>
        </tfoot>
      </table>
    </div>
  </t>
</templates>