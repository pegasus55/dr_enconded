<odoo>
    <data noupdate="1">
        <record id="email_template_report_bug" model="mail.template">
            <field name="name">Email template report bug</field>
            <field name="email_from">"{{ object.company_id.name }}" &lt;{{ object.company_id.email }}&gt;</field>
            <field name="subject">Reporte de error</field>
            <field name="email_to">drodriguez@nukleosolutions.com</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 13px;">
                    <p>
                        Estimado(s),<br/><br/>
                        Se reporta el siguiente error.<br/><br/>
                        <strong>Detalle del error:</strong><br/><br/>
                        <strong>
                            <t t-out="ctx.get('technical_message')"/>
                        </strong><br/><br/>
                    </p>

                    <p>Atentamente,</p>
                    <p t-out="object.company_id.name"/>
                    <img t-attf-src="/logo.png?company={{object.company_id.id}}" style="padding: 0px; margin: 0px; height: auto; width: 80px;" t-att-alt="object.company_id.name"/>
                    <p>
                        <i>Nota: El envío de este correo es automático, por favor no lo responda.</i>
                    </p>
                </div>
            </field>
        </record>

        <record id="email_template_notify_personal_income" model="mail.template">
            <field name="name">Email template notify personal income</field>
            <field name="email_from">"{{ object.company_id.name }}" &lt;{{ object.company_id.email }}&gt;</field>
            <field name="subject">Ingreso de personal</field>
            <field name="email_to"/>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 13px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Estimado(s),<br/><br/>
                        Se informa que el colaborador <strong><span t-out="object.name"/></strong> comienza a ser parte del equipo de <strong><span t-out="object.company_id.name"/></strong>.<br/><br/>
                    </p>

                    <table style="width:243pt; height:153pt; margin:5pt">
                        <td style="width:33%;" valign="center">
                            <table style="width:77pt; height:150pt">
                                <tr style="height:70%;">
                                    <td align="center" valign="center">
                                        <img t-if="object.image_1920" t-att-src="image_data_uri(object.image_1920)" style="max-height:85pt;max-width:90%" alt="Employee Image"/>
                                    </td>
                                </tr>
                            </table>
                        </td>
                        <td style="width:67%" valign="center">
                            <table style="width:155pt; height:85pt">
                                <tr style="height:70%;">
                                    <t t-if="object.name">
                                        <strong>Nombre:</strong> <span t-out="object.name"/><br/>
                                    </t>
                                    <t t-if="object.job_id.position_id.name">
                                        <strong>Cargo:</strong> <span t-out="object.job_id.position_id.name"/><br/>
                                    </t>
                                </tr>
                            </table>
                        </td>
                    </table>

                    <p>Atentamente,</p>
                    <p t-out="object.company_id.name"/>
                    <img t-attf-src="/logo.png?company={{object.company_id.id}}" style="padding: 0px; margin: 0px; height: auto; width: 80px;" t-att-alt="object.company_id.name"/>
                    <p>
                        <i>Nota: El envío de este correo es automático, por favor no lo responda. Si tiene alguna inquietud comuníquese con <t t-out="ctx.get('department')"/>.</i>
                    </p>
                </div>
            </field>
        </record>

