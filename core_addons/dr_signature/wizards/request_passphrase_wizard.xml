<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="check_passphrase_wizard">
      <field name="name">Request passphrase form</field>
      <field name="model">dr_signature.check.passphrase.wizard</field>
      <field name="mode">primary</field>
      <field name="priority">50</field>
      <field name="arch" type="xml">
        <form string="Request passphrase">
          <field name="has_error" invisible="1"/>
          <field name="error_msg" attrs="{'invisible': [('has_error', '=', False)]}"/>
          <field name="has_passphrase" invisible="1"/>

          <sheet>
            <group>
              <field name="sign_document"/>
              <field name="employee_id"
                     attrs="{'invisible': [('sign_document', '=', False)], 'required': [('sign_document', '=', True)]}"/>
              <field name="passphrase" password="True" placeholder="*******"
                     attrs="{'invisible': ['|', ('sign_document', '=', False), ('has_passphrase', '=', False)], 'required': [('has_passphrase', '=', True)]}"/>
              <field name="reason"
                     attrs="{'invisible': [('sign_document', '=', False)]}"/>
            </group>
            <footer>
              <button name="action_check" string="Check" class="btn-primary" type="object"/>
              <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
          </sheet>
        </form>
      </field>
    </record>

