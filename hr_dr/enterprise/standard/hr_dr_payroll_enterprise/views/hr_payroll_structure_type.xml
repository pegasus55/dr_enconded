<odoo>
    <data>
        <record model="ir.ui.view" id="hr_dr_payroll_enterprise_hr_payroll_structure_type_view_tree">
            <field name="name">Payroll structure type tree</field>
            <field name="model">hr.payroll.structure.type</field>
            <field name="inherit_id" ref="hr_payroll.hr_payroll_structure_type_view_tree"/>
            <field name="arch" type="xml">
                <field name="wage_type" position="after">
                    <field name="normative_id"/>
                    <field name="active" widget="boolean_toggle"/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="hr_dr_payroll_enterprise_hr_payroll_structure_type_view_form">
            <field name="name">Payroll structure type form</field>
            <field name="model">hr.payroll.structure.type</field>
            <field name="inherit_id" ref="hr_payroll.hr_payroll_structure_type_view_form"/>
            <field name="arch" type="xml">
                <field name="wage_type" position="after">
                    <field name="normative_id" required="True"/>
                    <field name="description"/>
                    <field name="active" widget="boolean_toggle"/>
                </field>
            </field>
        </record>
    </data>
</odoo>