<odoo>
    <data>
        <record model="ir.ui.view" id="view_company_form_hr_loan">
            <field name="name">view_company_form_hr_loan</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook//page[last()]" position="after">
                    <page name="loan" string="Loan">
                        <group>
                            <group>
                                <field name="credit_account_account_loan"/>
                                <field name="debit_account_account_loan"/>
                            </group>
                            <group>
                                <field name="account_analytic_account_loan"/>
                                <field name="account_journal_loan"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
  </data>
</odoo>