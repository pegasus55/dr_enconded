<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_loan_accounting_enterprise_form_view" model="ir.ui.view">
        <field name="name">hr_loan_accounting_enterprise_form_view</field>
        <field name="model">hr.loan</field>
        <field name="inherit_id" ref="hr_dr_loan.hr_loan_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='commentary']" position="after">
                <group string="Accounting">
                    <group attrs="{'invisible':[('state', 'in',['draft','cancelled','rejected'])]}">
                        <field name="credit_account_account_id" attrs="{'invisible':[('state', 'in',['draft','cancelled','rejected'])], 'readonly': [('readonly_values', '=', True)] }" force_save="1"/>
                        <field name="debit_account_account_id" attrs="{'invisible':[('state', 'in',['draft','cancelled','rejected'])], 'readonly': [('readonly_values', '=', True)] }" force_save="1"/>
                    </group>
                    <group>
                        <field name="account_journal_id" attrs="{'invisible':[('state', 'in',['draft','cancelled','rejected'])], 'readonly': [('readonly_values', '=', True)] }" force_save="1"/>
                        <field name="account_analytic_account_id" attrs="{'invisible':[('state', 'in',['draft','cancelled','rejected'])], 'readonly': [('readonly_values', '=', True)] }" force_save="1"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>