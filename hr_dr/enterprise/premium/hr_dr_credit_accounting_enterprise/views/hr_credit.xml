<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_credit_accounting_enterprise_form_view" model="ir.ui.view">
        <field name="name">hr_credit_accounting_enterprise_form_view</field>
        <field name="model">hr.credit</field>
        <field name="inherit_id" ref="hr_dr_credit.hr_credit_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='commentary']" position="after">
                <group string="Accounting">
                    <group attrs="{'invisible':[('state', 'in',['draft','pending','cancelled','rejected'])]}">
                        <field name="invoice" attrs="{'invisible':[('state', 'in',['draft','pending','cancelled','rejected'])], 'readonly': [('state', '=', 'in_payroll')] }" groups="hr_dr_credit.hr_dr_credit_group_supervisor"/>
                        <field name="credit_account_account_id" attrs="{'invisible':[('state', 'in',['draft','pending','cancelled','rejected'])], 'readonly': [('readonly_values', '=', True)] }" force_save="1" groups="hr_dr_credit.hr_dr_credit_group_supervisor"/>
                        <field name="debit_account_account_id" attrs="{'invisible':[('state', 'in',['draft','pending','cancelled','rejected'])], 'readonly': [('readonly_values', '=', True)] }" force_save="1" groups="hr_dr_credit.hr_dr_credit_group_supervisor"/>
                    </group>
                    <group>
                        <field name="account_journal_id" attrs="{'invisible':[('state', 'in',['draft','pending','cancelled','rejected'])], 'readonly': [('readonly_values', '=', True)] }" force_save="1" groups="hr_dr_credit.hr_dr_credit_group_supervisor"/>
                        <field name="account_analytic_account_id" attrs="{'invisible':[('state', 'in',['draft','pending','cancelled','rejected'])], 'readonly': [('readonly_values', '=', True)] }" force_save="1" groups="hr_dr_credit.hr_dr_credit_group_supervisor"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>