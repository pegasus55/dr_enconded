<odoo>
    <data>
        <record model="ir.ui.view" id="res_config_settings_view_form_eca">
            <field name="name">res.config.settings.view.form.eca</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_dr_employee_credit.res_config_settings_view_form_ec"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='hr_dr_employee_credit']" position="inside">

                    <h2>Accounting</h2>
                    <div class="row mt16 o_settings_container">

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="credit_account"/>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                        Default credit account.
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="credit_account"
                                            class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="debit_account"/>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                        Default debit account.
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="debit_account"
                                            class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="account_analytic_account"/>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                        Default analytic account.
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="account_analytic_account"
                                            class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="journal"/>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                        Default journal.
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="journal"
                                            class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </xpath>
            </field>
        </record>
    </data>
</odoo>