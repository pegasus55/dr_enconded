<odoo>
    <data noupdate="1">
        <record id="email_template_aprove_reject_notification" model="mail.template">
            <field name="name">Email template aprove/reject notification</field>
            <field name="email_from">"{{ object.employee_approve_id.company_id.name }}" &lt;{{ object.employee_approve_id.company_id.email }}&gt;</field>
            <field name="subject">{{ (ctx['subject']) }}</field>
            <field name="email_to">{{object.employee_approve_id.work_email | object.employee_approve_id.private_email}}</field>
            <field name="model_id" ref="model_hr_notifications"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 13px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <span style="font-weight:bold;" t-out="object.employee_approve_id.name"/>,<br/><br/>
                        The collaborator <span style="font-weight:bold;" t-out="object.employee_requests_id.name"/><t t-out="ctx.get('request')"/><br/><br/>
                        <strong>Request details:</strong><br/>
                        <t t-out="ctx.get('details')"/>
                        <t t-if="ctx.get('commentary')">
                            <strong>Comment:</strong> <t t-out="ctx.get('commentary')"/>
                            <br/>
                        </t>
                        For more details of the notification click <a href="${ctx['view_url']}"><strong>here</strong></a><br/>
                        <p><a href="/web/aprove_notification/${(object.id)}?db=${ctx['db']}&amp;model=${ctx['model']}&amp;id=${ctx['id']}&amp;action=${ctx['action']}&amp;menu_id=${ctx['menu_id']}" style="color:green">Approve</a> | <a href="/web/reject_notification/${(object.id)}?db=${ctx['db']}&amp;model=${ctx['model']}&amp;id=${ctx['id']}&amp;action=${ctx['action']}&amp;menu_id=${ctx['menu_id']}" style="color:red">Reject</a></p><br/>
                    </p>
                    <p>Sincerely,</p>
                    <p t-out="object.employee_approve_id.company_id.name"/>
                    <img t-attf-src="/logo.png?company={{object.employee_approve_id.company_id.id}}" style="padding: 0px; margin: 0px; height: auto; width: 80px;" t-att-alt="object.employee_approve_id.company_id.name"/>
                    <p>
                        <i>Note: Sending this email is automatic, please do not reply. If you have any concerns, please contact <t t-out="ctx.get('department')"/>.</i>
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>