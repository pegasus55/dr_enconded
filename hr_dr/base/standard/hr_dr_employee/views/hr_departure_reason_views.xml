<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_departure_reason_view_list_inherit" model="ir.ui.view">
            <field name="model">hr.departure.reason</field>
            <field name="inherit_id" ref="hr.hr_departure_reason_view_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="code" />
                </xpath>
            </field>
        </record>

        <record id="hr_departure_reason_view_form_inherit" model="ir.ui.view">
            <field name="model">hr.departure.reason</field>
            <field name="inherit_id" ref="hr.hr_departure_reason_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="code" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
