<odoo>
    <data>
        <record id="view_hr_employee_food_preferences_form" model="ir.ui.view">
            <field name="name">hr.employee.food.preferences.form</field>
            <field name="model">hr.employee.food.preferences</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Food preferences">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_hr_employee_food_preferences_tree" model="ir.ui.view">
            <field name="name">hr.employee.food.preferences.tree</field>
            <field name="model">hr.employee.food.preferences</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Food preferences">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>
        <record id="hr_employee_food_preferences_action" model="ir.actions.act_window">
            <field name="name">Food preferences</field>
            <field name="res_model">hr.employee.food.preferences</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hr_employee_allergies_tree"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to define a new food preference.
                </p>
            </field>
        </record>
    </data>
</odoo>