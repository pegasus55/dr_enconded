<odoo>
    <data>
        <record model="ir.ui.view" id="res_config_settings_create_user_when_creating_employee">
            <field name="name">res.config.settings.create.user.when.creating.employee</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='employee_rights_setting_container']" position="after">

                    <h2>Utilities</h2>
                    <div class="row mt16 o_settings_container" name="utilities_container">

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="create_user_when_creating_employee"/>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                        Create user when creating collaborator.
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div>
                                        <field name="create_user_when_creating_employee"
                                            class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="validate_identification"/>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                        Validate identification when creating and editing collaborators.
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div>
                                        <field name="validate_identification"
                                            class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="country_id"/>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                        Default country when creating the private addresses of the collaborators.
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div>
                                        <field name="country_id"
                                            class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </xpath>
            </field>
        </record>
    </data>
</odoo>