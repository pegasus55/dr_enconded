<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="action_payment_utility_external_service_personnel">
            <field name="name">External service personnel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_external_service_personnel','=',True)]</field>
            <field name="context">{
                    'default_is_external_service_personnel': 1
            }</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_smiling_face"/>
            </field>
        </record>

        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">view_partner_form_inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook//page[last()]" position="after">
                    <page name='external_service_personnel' string="External service">
                        <group>
                            <group>
                                <field name="is_external_service_personnel"/>
                                <field name="surnames"/>
                                <field name="names"/>
                            </group>
                            <group>
                                <field name="gender"/>
                                <field name="occupation"/>
                                <field name="disability"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="family_load" string="Family Load">
                                <field name="family_load_ids">
                                    <tree>
                                        <field name="partner_id" invisible="1"/>
                                        <field name="country_id" invisible="1"/>
                                        <field name="name"/>
                                        <field name="id_type"/>
                                        <field name="identification"/>
                                        <field name="relationship"/>
                                        <field name="date_of_birth"/>
                                        <field name="age"/>
                                        <field name="disability"/>
                                        <field name="insured"/>
                                    </tree>
                                    <form string="Family load">
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="partner_id" invisible="1" readonly="1"/>
                                                    <field name="country_id" invisible="1"/>
                                                    <field name="name"/>
                                                    <field name="id_type"/>
                                                    <field name="identification"/>
                                                    <field name="relationship"/>
                                                    <field name="date_of_birth" attrs="{'required': [('relationship','in',['children','daughter','son'])]}"/>
                                                    <field name="age"/>
                                                    <field name="phone"/>
                                                    <field name="address"/>
                                                </group>
                                                <group>
                                                    <field name="disability"/>
                                                    <field name="disability_conadis" attrs="{'invisible': [('disability','=',False)],'required': [('disability','=',True)]}"/>
                                                    <field name="disability_percentage" attrs="{'invisible': [('disability','=',False)],'required': [('disability','=',True)]}"/>
                                                    <field name="disability_description" attrs="{'invisible': [('disability','=',False)],'required': [('disability','=',True)]}"/>
                                                    <field name="insured"/>
                                                    <field name="active"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page name="judicial_withholding" string="Judicial Withholding">
                                <field name="judicial_withholding_ids" context="{'default_partner_id': active_id}">
                                    <tree>
                                        <field name="partner_id" invisible="1"/>
                                        <field name="country_id" invisible="1"/>
                                        <field name="family_load_id"/>
                                        <field name="card_code"/>
                                        <field name="judicial_process_number"/>
                                        <field name="approval_identifier"/>
                                        <field name="value" widget='monetary'/>
                                        <field name="beneficiary_id"/>
                                        <field name="representative_name"/>
                                        <field name="representative_id_type"/>
                                        <field name="representative_identification"/>
                                        <field name="company_id" groups="base.group_multi_company" options="{'no_open': True, 'no_create_edit': True}"/>
                                        <field name="currency_id" groups="base.group_multi_currency" options="{'no_open': True, 'no_create_edit': True}"/>
                                    </tree>
                                    <form string="Judicial withholding">
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="partner_id" invisible="1" readonly="1"/>
                                                    <field name="country_id" invisible="1"/>
                                                    <field name="family_load_id"/>
                                                    <field name="card_code"/>
                                                    <field name="judicial_process_number"/>
                                                    <field name="approval_identifier"/>
                                                    <field name="value" widget='monetary'/>
                                                </group>
                                                <group>
                                                    <field name="beneficiary_id"/>
                                                    <field name="representative_name"/>
                                                    <field name="representative_id_type"/>
                                                    <field name="representative_identification"/>
                                                    <field name="active"/>
                                                    <field name="company_id" groups="base.group_multi_company" options="{'no_open': True, 'no_create_edit': True}"/>
                                                    <field name="currency_id" groups="base.group_multi_currency" options="{'no_open': True, 'no_create_edit': True}"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>