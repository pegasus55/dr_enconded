<odoo>
    <data>
        <record model="ir.ui.view" id="res_config_settings_view_form_department_additional_manager">
            <field name="name">res.config.settings.view.form.department.additional.manager</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Departments" string="Departments" data-key="hr_dr_department" groups="hr.group_hr_manager">
                        <h2>Departments</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" title="Additional Managers">
                                <div class="o_setting_left_pane">
                                    <field name="module_hr_dr_department_additional_manager"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_hr_dr_department_additional_manager"/>
                                    <div class="text-muted">
                                        Add additional managers by department.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>