<odoo>
    <data>
        <!--Personal action-->
        <record model="ir.actions.act_window" id="personal_action_list_action">
            <field name="name">Personal action</field>
            <field name="res_model">hr.personal.action</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p
                    class="oe_view_nocontent_smiling_face">Create the personal action.
                </p>
            </field>
        </record>

        <record model="ir.ui.view" id="personal_action_list">
            <field name="name">Personal action list</field>
            <field name="model">hr.personal.action</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="personal_action_form">
            <field name="name">Personal action form</field>
            <field name="model">hr.personal.action</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="code"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <!--Personal action-->
    </data>
</odoo>