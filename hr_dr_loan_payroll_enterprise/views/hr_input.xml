<odoo>
    <data>
        <record id="hr_input_view_form_loan_payroll_enterprise" model="ir.ui.view">
            <field name="name">hr.input.form.loan_payroll_enterprise</field>
            <field name="model">hr.input</field>
            <field name="inherit_id" ref="hr_dr_payroll_base.hr_input_view_form"/>
            <field name="arch" type="xml">
                <field name="amount" position="after">
                    <field name="hr_loan_id" optional="hide" domain="[('employee_requests_id','=',employee_id), ('state','in',['approved', 'paid'])]"/>
                    <field name="hr_loan_line_id" optional="hide" domain="[('employee_id','=',employee_id), ('loan_id','=',hr_loan_id), ('state','in',['approved', 'paid']), ('paid','=',False)]"/>
                </field>
            </field>
        </record>

        <record id="hr_input_view_tree_loan_payroll_enterprise" model="ir.ui.view">
            <field name="name">hr.input.tree.loan_payroll_enterprise</field>
            <field name="model">hr.input</field>
            <field name="inherit_id" ref="hr_dr_payroll_base.hr_input_view_tree"/>
            <field name="arch" type="xml">
                <field name="amount" position="after">
                    <field name="hr_loan_id" optional="hide" domain="[('employee_requests_id','=',employee_id), ('state','in',['approved', 'paid'])]"/>
                    <field name="hr_loan_line_id" optional="hide" domain="[('employee_id','=',employee_id), ('loan_id','=',hr_loan_id), ('state','in',['approved', 'paid']), ('paid','=',False)]"/>
                </field>
            </field>
        </record>
    </data>
</odoo>