<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_loan_line_tree_view_inherit" model="ir.ui.view">
        <field name="name">hr.loan.line.tree.inherit</field>
        <field name="model">hr.loan.line</field>
        <field name="inherit_id" ref="hr_dr_loan.hr_loan_line_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='paid']" position="after">
                <field name="payslip_id"/>
            </xpath>
        </field>
    </record>
    <record id="hr_loan_line_form_view_inherit" model="ir.ui.view">
        <field name="name">hr.loan.line.form.inherit</field>
        <field name="model">hr.loan.line</field>
        <field name="inherit_id" ref="hr_dr_loan.hr_loan_line_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='paid']" position="after">
                <field name="payslip_id"/>
            </xpath>
        </field>
    </record>
</odoo>