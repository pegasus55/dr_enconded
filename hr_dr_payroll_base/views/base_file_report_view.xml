<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="base_file_report_view_form" model="ir.ui.view">
      <field name="name">Base File Report Form</field>
      <field name="model">base.file.report</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="filename" invisible="1" />
              <field name="file" widget="binary" filename="filename"/>
            </group>
            <footer>
              <button string="Cancel" special="cancel"/>
            </footer>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>