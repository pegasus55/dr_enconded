<odoo>
    <data>
        <record id="hr_input_view_form_credit_payroll_enterprise" model="ir.ui.view">
            <field name="name">hr.input.form.credit_payroll_enterprise</field>
            <field name="model">hr.input</field>
            <field name="inherit_id" ref="hr_dr_payroll_base.hr_input_view_form"/>
            <field name="arch" type="xml">
                <field name="amount" position="after">
                    <field name="hr_credit_id" optional="hide" domain="[('employee_requests_id','=',employee_id), ('state','in',['in_payroll'])]"/>
                    <field name="hr_credit_line_id" optional="hide" domain="[('employee_id','=',employee_id), ('credit_id','=',hr_credit_id), ('state','in',['in_payroll']), ('paid','=',False)]"/>
                </field>
            </field>
        </record>

        <record id="hr_input_view_tree_credit_payroll_enterprise" model="ir.ui.view">
            <field name="name">hr.input.tree.credit_payroll_enterprise</field>
            <field name="model">hr.input</field>
            <field name="inherit_id" ref="hr_dr_payroll_base.hr_input_view_tree"/>
            <field name="arch" type="xml">
                <field name="amount" position="after">
                    <field name="hr_credit_id" optional="hide" domain="[('employee_requests_id','=',employee_id), ('state','in',['in_payroll'])]"/>
                    <field name="hr_credit_line_id" optional="hide" domain="[('employee_id','=',employee_id), ('credit_id','=',hr_credit_id), ('state','in',['in_payroll']), ('paid','=',False)]"/>
                </field>
            </field>
        </record>
    </data>
</odoo>