<odoo>
    <data>
        <record id="action_personal_expenses_category" model="ir.actions.act_window">
            <field name="name">Personal expenses category</field>
            <field name="res_model">hr.personal.expenses.category</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                </p>
            </field>
        </record>

        <record id="view_personal_expenses_category_tree" model="ir.ui.view">
            <field name="name">personal.expenses.category.tree</field>
            <field name="model">hr.personal.expenses.category</field>
            <field name="arch" type="xml">
                <tree string="Personal expenses category">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="view_personal_expenses_category_form" model="ir.ui.view">
            <field name="name">personal.expenses.category.form</field>
            <field name="model">hr.personal.expenses.category</field>
            <field name="arch" type="xml">
                <form string="Personal expenses category">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="code"/>
                                <field name="active" widget='boolean_toggle'/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>