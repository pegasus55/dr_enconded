<odoo>
    <data noupdate="1">
        <record id="email_template_notify_trial_date_end" model="mail.template">
            <field name="name">Email template notify trial date end</field>
            <field name="email_from">"{{ object.employee_id.company_id.name }}" &lt;{{ object.employee_id.company_id.email }}&gt;</field>
            <field name="subject">End of trial period</field>
            <field name="email_to"/>
            <field name="model_id" ref="model_hr_contract"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 13px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear(s),<br/><br/>
                        The end date of the collaborator <span style="font-weight:bold;" t-out="object.employee_id.name"/> trial period is <span style="font-weight:bold;" t-out="object.trial_date_end.strftime('%d/%m/%Y')"/>.
                    </p>
                    <p>Sincerely,</p>
                    <p t-out="object.employee_id.company_id.name"/>
                    <img t-attf-src="/logo.png?company={{object.employee_id.company_id.id}}" style="padding: 0px; margin: 0px; height: auto; width: 80px;" t-att-alt="object.employee_id.company_id.name"/>
                    <p>
                        <i>Note: Sending this email is automatic, please do not reply. If you have any concerns, please contact <t t-out="ctx['department'] or ''"/>.</i>
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>