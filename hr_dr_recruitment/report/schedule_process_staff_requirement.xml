      </div>
    </t>
  </template>

  <template id="report_schedule_process_staff_requirement">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="hr_dr_recruitment.report_schedule_process_staff_requirement_document" t-lang="user.lang"/>
        </t>
    </t>
  </template>

